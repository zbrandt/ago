---
const { title } = Astro.props;
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/ago/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-100">
		<div class="mx-auto bg-white">
			<div class="bg-gray-900 text-white text-center py-2">
				<span class="inline-block">
					<span class="font-semibold">Rush Fall 2024</span>
					<span class="mx-2">â€¢</span>
					Join us from September 1 - September 15 for free food and drinks!
				</span>
				<a href="/rush" class="ml-4 inline-block bg-white text-green-600 px-5 rounded-full font-semibold hover:bg-gray-200 transition duration-150 ease-in-out">
					Rush &rarr;
				</a>
			</div>
			<Navbar />
			<slot />
			<Footer />
		</div>
	</body>
